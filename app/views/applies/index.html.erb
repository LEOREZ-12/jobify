<div class="custom-container">
  <div class="dash-header pt-4 pb-3">
    <h1>Bonjour <%= current_user.first_name %></h1>
  </div>

  <div class="d-flex align-items-end justify-content-between" >
    <div class="">
    <h2 class="">Mes candidatures</h2>
    </div>

    <div class="search-bar mt-2">
      <%= simple_form_for :search, url: apply_path(Apply.first), method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-warning design-search-bar">
          <i class="fas fa-search"></i> Recherche
        </button>
      </div>
      <% end %>
    </div>
  </div>

      <div class="dash-category d-flex justify-content-start align-items-start pb-3">

        <div class="mx-3">
          <%= link_to 'Toutes', applies_path %>
          <span>(<%= @allapplies_user.count %>)</span>
        </div>

        <div class="mx-3">
          <%= link_to 'Entretiens à préparer', applies_path(params: { status: 'Entretien' }) %>
          <span>(<%= @entretiens.count %>)</span>
        </div>

        <div class="mx-3">
          <%= link_to 'Candidatures à envoyer', applies_path(params: { status: 'A postuler' }) %>
          <span>(<%= @candidatures.count %>)</span>
        </div>

        <div class="mx-3">
          <%= link_to 'Relances', applies_path(params: { status: 'reminder' }) %>
          <span>(<%= @reminders.count %>)</span>
        </div>

        <div class="mx-3">
          <%= link_to 'Propositions à recevoir', applies_path(params: { status: 'Proposition à recevoir' }) %>
          <span>(<%= @propositions.count %>)</span>
        </div>

        <div class="mx-3">
          <%= link_to 'Refusées', applies_path(params: { status: 'Refus' }) %>
         <span>(<%= @refusees.count %>) </span>
        </div>
      </div>

      <div class="">
        <% @applies.each do |apply| %>
          <div class="container-offer pt-4">
            <div class="card-offer">
              <%= cl_image_tag apply.offer.company_logo.key, height: 300, width: 400, crop: :fill %>
              <div class="card-dispatch">
                <div class="card-offer-infos">
                  <h5><%= apply.offer.company_name %></h5>
                  <h3><%= apply.offer.job_title %></h3>
                  <p>CDI<span class="mx-2">•</span>
                  <%= apply.offer.company_city %><span class="mx-2">•</span>
                  Publié le <%= I18n.l(apply.offer.publish_date, format: " %d/%m/%Y") %><span class="mx-2">•</span>
                  il y a <%= time_ago_in_words(apply.offer.publish_date) %></p>
                </div>
              </div>
              <h2 class="status-label"><%= apply.status %></h2>
              <div class="money"><i class="fas fa-coins mx-2"></i><%= apply.offer.salary %> k</div>
            </div>
          </div>
        <% end  %>

    </div>

   <div class="dash-right d-flex align-items-end flex-column">
        <div class="calendar-1">
          <%# <img src="https://source.unsplash.com/7F65HDP0-E0/400x300" alt="Calendrier S"> %>
          <%= image_tag "semaine_1.png", class: 'calend-pic' %>
          <p>Cette semaine</p>
        </div>

        <div class="calendar-2">
          <%# <img src="https://source.unsplash.com/7F65HDP0-E0/400x300" alt="Calendrier S+1"> %>
          <%= image_tag "semaine_2.png", class: 'calend-pic' %>
          <p>La semaine prochaine</p>
        </div>


</div>

